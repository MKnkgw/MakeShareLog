<%=
  @title = "#{@user_name}"
  erb :"common/header"
%>

<div id="common-main">

<div id="common-left">
  <div class="photo-list">
    <% @photo_list.each do|face| %>
      <div class="photo-block">
        <%=
          @face = face
          @link_photo_user_name = true
          erb :"common/photo_block"
        %>
      </div>
    <% end %>
  </div>
</div>

<div id="common-right">
  <div class="public_change" style="margin: 10px">
    <a title="<%= @user_name %>さんへの公開設定を変更" href="/user/public/<%= @user_name %>"><%= @user_name %>さんへの公開設定<img class="small-icon" src="/img/icon/document_edit.png"></a>
  </div>

  <h2>あなたと共通の化粧品</h2>
  <div class="cosmetic-list you-have">
    <% @cosme_have_list.each do|cosme| %>
      <div class="cosmetic-block">
        <%=
          @cosme = cosme
          erb :"common/cosmetic_block"
        %>
      </div>
    <% end %>
  </div>

  <h2>他の化粧品</h2>
  <div class="cosmetic-list you-have-not">
    <% @cosme_have_not_list.each do|cosme| %>
      <div class="cosmetic-block">
        <%=
          @not_search_cosme_link = true
          @cosme = cosme
          erb :"common/cosmetic_block"
        %>
      </div>
    <% end %>
  </div>
</div>

</div>

<%= erb :"common/footer" %>
